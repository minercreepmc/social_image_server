{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "moduleNameMapper": {
    "@modules/(.*)$": "<rootDir>/src/modules/$1",
    "@exceptions/(.*)$": "<rootDir>/src/shared/exceptions/$1",
    "@core/(.*)$": "<rootDir>/src/shared/core/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
